

<div align="center">
  <h1><strong>Pick Your Poison</strong></h1>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
  <div class="col-xs-12 col-sm-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path cocktail.photo.path %>');">
      <div class="card-category">Drink</div>
      <div class="card-description">
        <h2><%= cocktail.name %></h2>
      </div>
    <%= link_to 'Show', cocktail, :class=>"card-link" %>
    </div>
    <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
    <%= link_to 'Destroy', cocktail, method: :delete %>
    </div>
  <% end %>

  </div>
</div>

<div align="center">
  <%= link_to 'New Cocktail', new_cocktail_path, :class=>"btn btn-primary btn-lg" %>
</div>

